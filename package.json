{
  "name": "markusbitterman-github-io",
  "version": "1.0.0",
  "description": "A living GitHub Pages site: portfolio, blog, devlog, and starter kit",
  "scripts": {
    "build": "npm run build:sass && npm run build:eleventy",
    "build:eleventy": "eleventy",
    "build:sass": "sass src/styles/main.scss _site/css/main.css --style=compressed",
    "watch": "npm run watch:sass & npm run watch:eleventy",
    "watch:eleventy": "eleventy --serve",
    "watch:sass": "sass src/styles/main.scss _site/css/main.css --watch",
    "start": "npm run watch",
    "clean": "rm -rf _site",
    "test": "npm run test:build && npm run test:html && npm run test:links",
    "test:build": "npm run build",
    "test:html": "node tests/validate-html.js",
    "test:links": "node tests/check-links.js"
  },
  "keywords": [
    "eleventy",
    "11ty",
    "github-pages",
    "portfolio",
    "blog",
    "bulma",
    "sass"
  ],
  "author": "Markus Bitterman",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "bulma": "^0.9.4",
    "cheerio": "^1.0.0-rc.12",
    "glob": "^10.3.10",
    "sass": "^1.69.5"
  }
}
